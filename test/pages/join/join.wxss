/* pages/join/join.wxss */
page{
  background: #f3f3f3;
}
.banner{
  display: block;
  margin: auto;
  width: 90%;
  height: 340rpx;
}
.block{
  background: #fff;
}
.block-title{
  position: relative;
  font-size:34rpx;
  line-height:1.5;
  color: #2e5e86;
  padding: 10rpx 20rpx;
  text-indent: 20rpx;
}
.block-title::after{
  position: absolute;
  left: 20rpx;
  top: 14rpx;
  content: "";
  width: 10rpx;
  height: 40rpx;
  background: #2e5e86;
}
.block-desc{
  display:block;
  color: #666;
  line-height:1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
}